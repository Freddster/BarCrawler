@using System.Net.Configuration
@using System.Reflection.Emit
@using BarCrawler.Models
@model BarCrawler.Models.BarModel
@{
    ViewBag.Title = "BarProfil";
}

<script type="text/javascript">
    var map;
    Window.onload = function () {
        google.maps.visualRefresh = true;
        var Aarhus = new google.maps.LatLng(56.158170, 10.198101);

        var mapOptions = {
            zoom: 13,
            center: Aarhus,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        map = new google.maps.Map(document.getElementById("barMap"), mapOptions);

    }

</script>

<script async defer
        src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDJU97le-qA2klWf9XxpEziqQNcNAFMCHU&callback=initMap">
</script>

@*Indsæt coverbillede her*@
<div class="container" style="width: 100%; height: 350px; overflow: hidden;">
    @if (Model.Pictures.Count > 0)
    {
        <img src="@Url.Content(Model.ProfilPictureModel.Directory)" alt="Img" style="max-height: 350px; position: relative;" />
    }
    @if (Model.Pictures.Count == 0)
    {
        <img src="http://www.nice.com/PublishingImages/Career%20images/J---HR_Page-4st-strip-green-hair%20(2).png?RenditionID=-1" style="max-width: 100%; position: relative;" />
    }
</div>

<h2> @Html.DisplayFor(Model => Model.BarName)</h2>
<ul class="nav nav-tabs nav-justified" style="width:90%">
    <li role="presentation" class="active"><a href="#Feed" aria-controls="Feed" role="tab" data-toggle="tab">Feed</a></li>
    <li role="presentation"><a href="#Events" aria-controls="Events" role="tab" data-toggle="tab">Events</a></li>
    <li role="presentation"><a href="#Galleri" aria-controls="Galleri" role="tab" data-toggle="tab">Galleri</a></li>
    <li role="presentation"><a href="#Info" aria-controls="Info" role="tab" data-toggle="tab">Info</a></li>
</ul>
<div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="Feed">
        <div style="line-height: 20px">
            <h2>Feedoversigt <button type="submit" class="btn btn-default"><i class="glyphicon-plus"></i></button></h2>
        </div>
        <div style="width: 70%; float: left; margin-top: 5px">
            <div class="list" style="margin-right: 15px">

                @foreach (var item in Model.Feeds)
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            @item.Text
                        </div>
                    </div>
                }
            </div>
        </div>

        <div style="width: 30%; float: left; margin-top: 5px">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table>
                        <tr>
                            <td style="width: 27px"><span class="glyphicon glyphicon-time"></span></td>
                            <td>@*Åbningstider*@ @Model.OpenTime - @Model.CloseTime</td>
                        </tr>
                        <tr>
                            <td style="width: 27px"><span class="glyphicon glyphicon-book"></span></td>
                            <td>@*Fakultet*@ @Model.Faculty</td>
                        </tr>
                        <tr>
                            @*Vejnavn og nummer*@
                            <td style="width: 27px"><span class="glyphicon glyphicon-home"></span></td>
                            <td>@Model.Address1 @Model.StreetNumber</td>
                        </tr>
                        <tr>
                            @*Postnummer og by*@
                            <td style="width: 27px"></td>
                            <td>@Model.Zipcode @Model.City</td>
                        </tr>
                        <tr>
                            <td></td>
                        </tr>
                    </table>
                    <div id="barMap">
                        <style>
                            #barMap {
                                max-width: 100%;
                                height: 200px;
                            }
                        </style>
                    </div>

                </div>
            </div>
        </div>
    </div>




    <div role="tabpanel" class="tab-pane fade in" id="Events">
        <h2>
            Kalender
            <button type="submit" class="btn btn-default">
                <i class="glyphicon-plus"></i>
            </button>
        </h2>
        <div class="container">
            @if (Model.Events.Count > 0)
            {
                <hr />

                    <div class="agenda">
                        @{
                            //opretter en liste med EventModeller
                            List<EventModel> eventList = new List<EventModel>();
                            foreach (var item in @Model.Events)
                            {
                                if (item != null)
                                {
                                    //tilføjer listen med alle eksisterende events
                                    eventList.Add(item);
                                }
                                
                                //opretter en ny liste med alle event-onbjekterne i sorteret rækkefølge efter DateTime
                                eventList.OrderBy(o => o.DateAndTimeForEvent);
                            }

                        }

                        @foreach (var eventobj in eventList) //Udskriver den sorterede liste på event-fanen
                        {
                            <a class="list-group-item">
                                <div class="container">
                                    <div class="col-lg-1">
                                        <div class="row">
                                            <p style="color: #22662f">
                                                @eventobj.DateAndTimeForEvent
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-lg-5">
                                        <div class="row">
                                            <h4><b>@eventobj.Title</b></h4>
                                        </div>

                                        <div class="row">
                                            <p>
                                                @eventobj.BarModel.BarName
                                            </p>
                                        </div>
                                        <div class="row">
                                            <p>
                                                @eventobj.Description
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                            }
            @if (Model.Events.Count == 0)
            {
                <h2>@Model.BarName har ingen kommende events</h2>
            }
        </div>
    </div>

    <div role="tabpanel" class="tab-pane fade in" id="Galleri">
        <h2>Galleri <button type="submit" class="btn btn-default"><i class="glyphicon-plus"></i></button></h2>
        @if (@Model.Pictures.Count > 0)
            {
            <div class="row">
                @foreach (var item in Model.Pictures)
                {
                    <div class="col-lg-3">
                        <div class="row">
                            <img class="resize"
                                 src="@Url.Content(item.Directory)"
                                 alt=""
                                 style="max-height: 200px;
                                        max-width: 290px;
                                        margin-left: auto;
                                   margin-right: auto; display: block;" />
                        </div>
                        <div class="row">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                    </div>
                }
            </div>
        }


    </div>

    <div role="tabpanel" class="tab-pane fade in" id="Info">
        <h2>Kontaktinformation <button type="submit" class="btn btn-default"><i class="glyphicon-plus"></i></button></h2>
        
        <div class="container-fluid">
            <table class="table table" style="max-width: 400px; ">
                <tbody>
                <tr>
                    <td>@Html.LabelFor(m => m.OpenTime):</td>
                    <td>@Model.OpenTime - @Model.CloseTime</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Email):</td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.PhoneNumber):</td>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Faculty):</td>
                    <td>@Model.Faculty</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.City):</td>
                    <td>@Model.City</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Zipcode):</td>
                    <td>@Model.Zipcode</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Address1):</td>
                    <td>@Model.Address1</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.StreetNumber):</td>
                    <td>@Model.StreetNumber</td>
                </tr>
                </tbody>
            </table>
            </div>
       
        <div class="container">
            <div class="row">
                <h2>Om os <button type="submit" class="btn btn-default"><i class="glyphicon-plus"></i></button></h2>
            </div>
            <div class="row">
                <div class="col-lg-11">
                    @Model.Description
                </div>
            </div>
            @if (Model.Drinks.Count > 0)
            {
                <div class="row">
                    <h2>Drinkskort <button type="submit" class="btn btn-default"><i class="glyphicon-plus"></i></button></h2>
                </div>

                <div class="row">
                    <div class="col-lg-1"><b>Navn</b></div>
                    <div class="col-lg-1"><b>Pris</b></div>
                </div>
                foreach (var item in Model.Drinks)
                {
                    <div class="row">
                        <div class="col-lg-1">@Html.DisplayFor(modelItem => item.Title)</div>
                        <div class="col-lg-1">@Html.DisplayFor(modelItem => item.Price)</div>
                    </div>
                }
            }
        </div>
    </div>
</div>
